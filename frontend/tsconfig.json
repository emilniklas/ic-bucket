{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "icbucket/*": ["canisters/icbucket/*"],
      "icbucket": ["canisters/icbucket/index.js"],
      "icbucket_frontend": ["canisters/icbucket_frontend/index.js"],
      "icbucket_frontend/*": ["canisters/icbucket_frontend/*"]
    }
  },
  "include": [
    "canisters/**/*.d.ts",
    "canisters/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "*.ts",
    "*.d.ts"
  ]
}
